!!! 5
%html
  %head
    = stylesheet_link_tag 'compiled/screen.css'
    = stylesheet_link_tag 'compiled/print.css'
    /[if lt IE 8] 
      = stylesheet_link_tag 'compiled/ie.css'
    = stylesheet_link_tag 'compiled/application.css'
    /[if lt IE 9]
      = javascript_include_tag 'html5'
    = javascript_include_tag :defaults
    = yield :more_javascript
    = csrf_meta_tag
  %body
    .container
      .span-24.last
        #header
      .span-4
      .span-16
        #content
          - if flash[:alert]
            %p.flash-error
              = flash[:alert]
          - if flash[:notice]
            .flash-notice
              = flash[:notice]
          - if show_title?
            %h2= h yield(:title)
          = yield
      .span-4.last
      .span-24.last
        #footer
          &copy; ExpenseDaddy
    