!!! 5
%html
  %head
    = stylesheet_link_tag 'compiled/screen.css'
    = stylesheet_link_tag 'compiled/print.css'
    /[if lt IE 8] 
      = stylesheet_link_tag 'compiled/ie.css'
    = stylesheet_link_tag 'compiled/application.css'
    /[if lt IE 9]
      = javascript_include_tag 'html5'
    = javascript_include_tag :defaults
    = javascript_include_tag 'highcharts'
    = yield :more_javascript
    = csrf_meta_tag
  %body
    .container
      .span-24.last
        #header
          = link_to image_tag("logo.jpg"), root_url, :title => "Homepage"
        #accounts
          Ormond
      .span-19
        #content
          - if flash[:alert]
            %p.flash-error
              = flash[:alert]
          - if flash[:notice]
            .flash-notice
              = flash[:notice]
          - if show_title?
            %h2= h yield(:title)
          = yield
      .span-5.last
        = yield(:details)
      .span-24.last
        #footer
          &copy; ExpenseDaddy
    